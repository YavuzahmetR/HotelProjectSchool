@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<style>
    .bold {
        color: black;
    }
</style>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Referans Görseli</th>
            <th>Referans Adı</th>
            <th>Referans Ünvanı</th>
            <th>Güncelle</th>
            <th>Kaldır</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="bold">@item.TestimonialID</td>
                <td><img src="@item.TestimonialImage" class=" rounded-circle mr-3" alt=""></td>
                <td class="bold">@item.Name</td>
                <td class="bold">@item.TestimonialTitle</td>
                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a> </td>
                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn mb-1 btn-rounded btn-outline-danger">Kaldır</a> </td>
            </tr>
        }
    </table>
</div>
<a href="/Testimonial/AddTestimonial/" class="btn mb-1 btn-rounded btn-outline-secondary">Yeni Referans Girişi</a>




