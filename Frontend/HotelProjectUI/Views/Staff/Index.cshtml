@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<style>
    .bold{
        color:black;
    }
</style>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Personel İsim</th>
            <th>Personel Ünvan</th>
            <th>Detaylar</th>
            <th>Güncelle</th>
            <th>Kaldır</th>
        </tr>
        @foreach(var item in Model)
            {
            <tr>
                <td class="bold">@item.StaffID</td>
                <td class="bold">@item.Name</td>
                <td class="bold">@item.StaffTitle</td>
                <td><a href="#" class="btn mb-1 btn-rounded btn-outline-primary">Detaylar</a> </td>
                <td><a href="/Staff/UpdateStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a> </td>
                <td><a href="/Staff/DeleteStaff/@item.StaffID" class="btn mb-1 btn-rounded btn-outline-danger">Kaldır</a> </td>
            </tr>
            }
    </table>
</div>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-secondary">Yeni Personel Girişi</a>


