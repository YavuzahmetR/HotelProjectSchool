@model CreateContactDto
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Contact Us</h6>
            <h1 class="mb-5"><span class="text-primary text-uppercase">Destek</span> Tüm sorularınız için</h1>
        </div>
        <div class="row g-4">
            <div class="col-12">
                <div class="row gy-4">
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase" style="padding-left:40px">Rezervasyon</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>hotelierBooking@example.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase" style="padding-left:40px">Genel</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>hotelierInfo@example.com</p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="section-title text-start text-primary text-uppercase" style="padding-left:40px">Teknik</h6>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>hotelierTech@example.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2570.322860753323!2d29.025611050369076!3d41.049947596249794!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab7c9345131a7%3A0x48cd9a0603dbadee!2sHatice%20Sultan%20Yal%C4%B1s%C4%B1!5e0!3m2!1str!2str!4v1702932783584!5m2!1str!2str"
                        frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0"></iframe>
            </div>
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="MessageSend" asp-controller="Contact">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Adınız Soyadınız" name="Name">
                                    <label for="name">Ad Soyad</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Emailiniz" name="Mail">
                                    <label for="email">Email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    @Html.DropDownListFor(x => x.MessageCategoryID,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
                                    <label for="subject">Konu Seçiniz</label>
                                </div>
                                <br />
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Konu Açıklaması" name="Subject">
                                    <label for="subject">Konu Açıklaması</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Mesaj Giriniz" id="message" style="height: 150px" name="Message"></textarea>
                                    <label for="message">Mesaj</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Mesajı Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>