@model CreateGuestDto

@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Müşteri Adı</label>
    <input type="text" class="form-control input-rounded" asp-for="Name" />
    <br />
    <label>Müşteri Soyadı</label>
    <input type="text" class="form-control input-rounded" asp-for="Surname" />
    <br />
    <label>Şehir</label>
    <input type="text" class="form-control input-rounded" asp-for="City" />
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-success">Müşteriyi Ekle</button>
</form>



