@model AdminMailVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Kime :</label>
    <input type="text" class="form-control" asp-for="RecevierMail"/>
    <br />
    <label>Konu :</label>
    <input type="text" class="form-control" asp-for="Subject" />
    <br />
    <label>Mesaj :</label>
    <textarea class="form-control h-150px" rows="6" id="comment" asp-for="Body"></textarea>
    <br />
    <button class="btn btn-success">Gönder</button>
</form>
